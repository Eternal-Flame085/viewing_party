<h2><%= button_to 'Find Top Rated Movies', '/movies/top_rated' %></h2>

<%= form_with url: '/movies', method: 'get', local: true do |f| %>
  <%= f.text_field :movie_title , placeholder: "Search by movie title"%>
  <%= f.submit "Find Movies" %>
<% end %>

<% @titles.each do |title| %>
  <div class="movie-column">
    <ul class="movie-results"><%= title[:original_title] %></ul>
  </div>

  <div class="vote-column">
    <ul>Vote Average: <%= title[:vote_average] %></ul>
  </div>
<% end %>
