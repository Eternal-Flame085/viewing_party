<h1>Welcome <%= current_user.first_name %> <%= current_user.last_name %></h1><br>

<div class="container">
    <%= button_to 'Find Top Rated Movies', movies_top_rated_path, method: 'get', class: "btn btn-outline-primary" %><br>
    <%= button_to 'Upcoming Movies', movies_upcoming_path, method: 'get', class: "btn btn-outline-primary" %><br>

  <%= form_with url: movies_path, method: 'get', local: true do |f| %>
    <%= f.text_field :movie_title , placeholder: "Search by movie title" %>
    <%= f.submit "Find Movies" %>
  <% end %>
</div><br><br>

<ol>
  <% @top_movies.each do |movie| %>
  <section id='movie-<%= movie.movie_id %>' class="movie-column">
      <li><%= link_to movie.title, "/movies/#{movie.movie_id}" %></li>
  </section>
  <div class="vote-column">
      Vote Average: <%= movie.vote_average %>
  </div>
  <% end %>
</ol>
