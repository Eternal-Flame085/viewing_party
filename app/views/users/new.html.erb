<h1>Welcome to Viewing Party</h1>

<h2>Please Register for an Account</h2>

<%= form_tag '/users', method: :post do %>
  <%= label_tag :first_name %><br>
  <%= text_field_tag :first_name, @user.first_name %><br><br>
  <%= label_tag :last_name %><br>
  <%= text_field_tag :last_name, @user.last_name %><br><br>
  <%= label_tag :email %><br>
  <%= text_field_tag :email, @user.email %><br><br>
  <%= label_tag :password %><br>
  <%= password_field_tag :password %><br><br>
  <%= label_tag :password_confirmation %><br>
  <%= password_field_tag :password_confirmation %><br><br>
  <%= submit_tag "Register" %>
<% end %>
